---
import Link from "./Link.astro";

export interface Props {
  href: string;
  alt?: string;
}

const { href, alt } = Astro.props;
---

<Link title={alt} href={href} target="_blank" rel="noopener noreferer">
  <slot />
</Link>

<style lang="scss">
  a {
    :global(svg) {
      @apply w-6;
      @apply h-6;
      // @apply text-slate-600;
    }

    &:hover,
    &:focus {
      :global(svg) {
        // @apply text-slate-950;
      }
    }
  }
</style>
