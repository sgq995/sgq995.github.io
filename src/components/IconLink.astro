---
import { Icon } from "astro-icon";
import Link from "./Link.astro";

export interface Props {
  href: string;
  name: string;
  alt?: string;
}

const { href, name, alt } = Astro.props;
---

<Link title={alt} href={href} target="_blank" rel="noopener noreferer">
  <Icon class="inline h-6 w-6" pack="tabler" name={name} />
</Link>
