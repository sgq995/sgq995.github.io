---
import type { HTMLAttributes } from "astro/types";

export type Props = HTMLAttributes<"a"> & {
  href: string;
};

const { href, class: className, ...props } = Astro.props;

const isCurrentPage = Astro.url.pathname.endsWith(href);
const ariaCurrent = isCurrentPage ? "page" : null;
---

<a
  {...props}
  class:list={[
    className,
    "text-slate-600 hover:text-slate-950 active:text-slate-950 dark:text-slate-300 dark:hover:text-slate-50 dark:active:text-slate-50",
  ]}
  aria-current={ariaCurrent}
  href={href}
>
  <slot />
</a>
