---
export interface Props {
  color?: "primary" | "secondary";
  fullOnMobile?: boolean;
}

const { color = "primary", fullOnMobile = false } = Astro.props;
---

<hr
  class:list={[
    "my-6 w-24 border-t-2",
    {
      "border-t-sky-500": color === "primary",
      "border-t-slate-300": color === "secondary",
      "w-full md:w-24": fullOnMobile,
    },
  ]}
/>
